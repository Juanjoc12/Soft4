<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <!--Bootstrap 4-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <title>Login</title>
    <% include partials/head %>
</head>

<body class="diseño">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container" Style="color:white;">
            <h3>Rubric Expertise</h3>
            <div>
                <a href="/logout" class="btn btn-light btn-sm">
                    Salir
                </a>
            </div>
        </div>
    </nav>

    <div class="container" Style="color:white;">

        <form action="/formAdmin" method="POST">
            <label for="Name">
                <h3>Niveles</h3>
            </label>
            <div class="control">
                <label class="radio">
                    <input type="radio" name="id_nivel" value=1>
                    Conocimiento (1)
                </label><br>
                <label class="radio">
                    <input type="radio" name="id_nivel" value=2>
                    Comprension (2)
                </label><br>
                <label class="radio">
                    <input type="radio" name="id_nivel" value=3>
                    Aplicación/Analisis (3)
                </label><br>
                <label class="radio">
                    <input type="radio" name="id_nivel" value=4>
                    Síntesis (4)
                </label><br>
                <label class="radio">
                    <input type="radio" name="id_nivel" value=5>
                    Evaluación (5)
                </label>
            </div>

            <br />
            <label for="Name">Nombre Categoria</label>
            <input type="text" name="categoria" value="">
            <button type="submit" class="btn btn-success">Agregar</button>
        </form>

        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <th>Nivel</th>
                    <th>Categoria</th>
                    <th>Operaciones</th>
                </thead>
                <tbody>
                    <% for(var i=0; i < rubric.length; i++) { %>
                    <tr>
                        <td><strong><%= rubric[i].id_nivel %></strong></td>
                        <td><%= rubric[i].categoria %></td>
                        <td>
                            <a href="/deleteCategoria/<%= rubric[i]._id %>" class="btn btn-danger">
                                    Eliminar
                            </a>
                            <a href="" class="btn btn-info">
                                    Editar
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>